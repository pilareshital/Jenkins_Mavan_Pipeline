pipeline{
    agent any
    stages{
        stage("checkout git"){
            steps{
                git url: "https://github.com/akshu20791/addressbook-cicd-project"
                echo "Addressbook repo cloned"
            }
        }
        stage("compile the code"){
            steps{
                echo "compiling starting"
                sh "mvn compile"
                echo "compiling done"
            }
        }
        stage("Testing of the code"){
            steps{
                echo "testing steps"
                sh "mvn test"
            }
        }
        stage("qa of the code"){
            steps{
                sh "mvn pmd:pmd"
            }
        }
        stage("package"){
            steps{
                sh "mvn package"
            }
        }
    }
    
}

